<%= form_for @user do |f| %>

  <div class="field">
    <%= f.label "Name:" %>
    <%= f.text_field :name %><br><br>
  </div>

  <div class="field">
    <%= f.label "Email:" %>
    <%= f.text_field :email %><br><br>
  </div>

  <div class="field">
    <%= f.label "Password:" %>
    <%= f.text_field :password, placeholder: "min. 6 characters" %><br><br>
  </div>

  <%= f.submit class: 'btn btn-success btn-md' %>
<% end %>
