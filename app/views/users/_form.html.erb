<%= form_for @user do |f| %>
  <%= f.label :name, "Name" %><br>
  <%= f.text_field :name %><br><br>
  <%= f.label :email, "Email" %><br>
  <%= f.text_field :email %><br><br>
  <%= f.label :password, "Password (min. 6 characters)" %><br>
  <%= f.text_field :password %><br><br>
  <%= f.submit class: 'btn btn-success btn-md' %>
<% end %>

