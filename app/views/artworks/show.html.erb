<div id="the_artworks" class="header">
  <div class="heading">
    <h1> <%= @artist.name %> </h1>
  </div>
  <div class="obj-links">
    <%= link_to "Show All #{@artist.name} Artworks", artist_path(@artist), class:'btn btn-link btn-sm' %>
    <%= link_to "Edit Artwork", edit_artist_artwork_path, id:"update_artwork", class:'btn btn-link btn-sm' %>
    <%= link_to "Delete Artwork", artist_artwork_path, class:'btn btn-link btn-sm', method: :delete, data: {confirm: "Are you sure you want to delete this Artwork?"} %>
  </div>
</div>

<div id="the_artworks" class="content">
  <div class='row'>
    <div id="the_artworks_image" class="col-md-6">
      <%= image_tag @artwork.images.url %>
    </div>

    <div class="col-md-6">
      <h2> <%= @artwork.title %> </h2>
      <p><span>Exhibition:</span> <%= @artwork.exhibition %> </p>
      <p>Medium/Media:</p>
      <ul>
        <% @artwork.media.each do |medium| %>
          <li> <%= medium.name %> </li>
        <% end %>
      </ul>
      <p> Rating: <%= @artwork.rating %> </p>
      <p> Comments: <%= @artwork.comments %> </p>

      <h4>Do I own this?</h4>
      <p> <%= @artwork.user_owned %> </p>
      <% if @artwork.user_owned == "Yes" %>
        <p> Signed? <%= @artwork.signed %> </p>
        <p> Original or Print? <%= @artwork.original %> </p>
      <% end %>
    </div>
  </div>
</div>
