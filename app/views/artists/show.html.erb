<div class="container_show">
  <h1> <%= @artist.name %> </h1>
  <h4> <%= @artist.website %> </h4>
  <p> Discovered at: <%= @artist.discovered %> </p>
  <p> Rating: <%= @artist.rating %> </p>

  <div class="btn-group">
    <%= link_to "Show All Artists", artists_path, class:'btn btn-link btn-sm' %>
    <%= link_to "Edit Artist", edit_artist_path(@artist), class:'btn btn-link btn-sm' %>
    <%= link_to "Delete Artist", @artist, method: :delete, data: {confirm: "Are you sure you want to delete this Artist?"}, class:'btn btn-link btn-sm' %></p>
  </div>
</div>

<%= render :partial => 'shared/flash_messages' %>

<%= render :template => 'artworks/index' %>
