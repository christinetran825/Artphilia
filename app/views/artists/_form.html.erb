<%= form_for @artist do |f| %>
  <div class="field">
    <%= f.label :name, "Artist's Name" %><br>
    <%= f.text_field :name %>
  </div><br>
  <div class="field">
    <%= f.label :website, "Artist's Website (enter None for No Website)" %><br>
    <%= f.text_field :website %>
  </div><br>
  <div class="field">
    <%= f.label :discovered, "Where did you find this Artist?" %><br>
    <%= f.text_field :discovered %>
  </div><br>
  <div class="field">
    <%= f.label "Rating (enter 1-5)" %><br>
    <%= f.text_field :rating %>
  </div><br>
  <div class="field">
    <%= f.label :notes %><br>
    <%= f.text_area :notes %>
  </div><br>
    <%= f.submit class: 'btn btn-success' %>
<% end %>
<br>
