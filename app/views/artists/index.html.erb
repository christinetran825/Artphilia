<%= render :partial => 'artistIndexBodyHeader' %>
<%= render :partial => 'shared/flash_messages' %>

<div class="content">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Artist's Name</th>
        <th># of Artworks</th>
        <th>Website</th>
        <th>Rating</th>
        <th>Edit</th>
        <th>Delete</th>
      </tr>
    </thead>
    <tbody>
      <%= page_entries_info @artists, entry_name: "Artists" %>
      <%= paginate @artists, window: 2 %>
      <% @artists.each do |a| %>
      <tr>
        <td><%= link_to a.name, artist_path(a) %></td>
        <td><%= link_to a.artworks.count, artist_artworks_path(a) %></td>
        <td><%= link_to a.website, a.website, :target => "_blank" %></td>
        <td><%= a.rating %></td>
        <td><%= link_to "Edit", edit_artist_path(a), id:"update_artist" %></td>
        <td><%= link_to "Delete", a, method: :delete, data: {confirm: "Are you sure you want to delete this Artist?"} %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
