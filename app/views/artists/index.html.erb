<h1>All Artists</h1>

<h4><%= link_to "Add a New Artist", new_artist_path %></h4>

<p>Sort by First/Last Name   A  |  B  |  C </p>
<!-- create a sort option list for first/last name; create links for first and last initials -->

<p><%= pluralize(@artists.count, 'Artists') %></p>

<!-- list all artists; filter by abc order last name and first name; add artist's website link -->
<table class="table table-striped">
  <thead>
    <tr>
      <th>Artist's Name</th>
      <th>Artist's Artworks</th>
      <th>Website</th>
      <th>Rating</th>
    </tr>
  </thead>
  <tbody>
    <% @artists.each do |a| %>
    <tr>
      <td><%= link_to a.name, artist_path(a) %></td>
      <td><%= link_to 'Artworks', artist_artworks_path(a) %></td>
      <td><%= a.website %></td>
      <td><%= a.rating %></td>
    </tr>
    <% end %>
  </tbody>
</table>
